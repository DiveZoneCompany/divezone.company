---
layout: base
---

<article>
    <h2>{{ title }}</h2>
    <ul class="post-metadata">
        <li>
            <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
        </li>
        {%- for tag in tags | filterTagList %}
            <li>
                <a href="/tags/{{ tag | slugify }}/" class="post-tag">{{ tag }}</a>
                {%- if not loop.last %}, {% endif %}
            </li>
        {%- endfor %}
    </ul>
    {{ content }}
</article>