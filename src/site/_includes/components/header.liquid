{% assign pages = collections.header | eleventyNavigation %}
<header>
  <div class='header--logo'>
    <a href='/'>{% include './logo', preTitle: 'THE', postTitle: 'COMPANY' %}</a>
  </div>
  <div class='header--nav'>
    <nav class='nav--main'>
      <ul role='list'>
        {%- for entry in pages %}
          <li
            {% if entry.url == page.url %}
              class='active'
            {% endif %}>
            <a href='{{ entry.url | url }}'>{{ entry.title }}</a>
          </li>
        {%- endfor %}
      </ul>
    </nav>
  </div>
</header>
